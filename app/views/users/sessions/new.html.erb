<!--Title of Home page-->
<title>Harmony Plus Log In</title>

<div class="form-container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="form-signin-heading">Log In</h2>
    <div class="form-signin-heading">
      <%= f.label :email, :class=>"sr-only" %>
      <!--<br />-->
      <%= f.email_field :email, autofocus: true, :placeholder=>"Email address", :type=>"email", :class=>"form-control" %>
    </div>
  
    <div class="field">
      <%= f.label :password, :class=>"sr-only" %>
      <!--<br />-->
      <%= f.password_field :password, autocomplete: "off", :placeholder=>"Password", :type=>"password", :class=>"form-control" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
    
    <br />
    
    <%= render "devise/shared/links" %>
  <% end %>

</div>